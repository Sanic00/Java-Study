package com.DBex;

import java.sql.*;


public class JdbcEx01 {

	public static void main(String[] args) {
	// db 연결 객체 선언	
	 Connection con = null;
	 
	 try { 
		 // jdbc 드라이버 메모리에 로드하기
		 Class.forName("oracle.jdbc.driver.OracleDirver"); //orjdbc6 를 불러오는 명령어
		 // 연결객체 얻기
		 con = DriverManager.getConnection("jdbc:oracle:thin:@localhost@localhost:1521:orcl", "scott", "tiger");
	 System.out.println("데이터베이스 연결 성공");	 
	 }catch(ClassNotFoundException cnfe) {
		 cnfe.printStackTrace();
	
	 }catch (SQLException se) {
		 se.printStackTrace();
	}finally {
		try {if(con !=null)con.close();}catch(SQLException s) {}
	}
		
		

	}

}
